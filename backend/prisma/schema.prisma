// update database: npx prisma migrate dev --name init

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @unique @default(uuid())
  email         String         @unique
  username      String
  surname       String
  name          String
  paypal        String
  password      String
  
}

model Todo{
  id            String         @id @unique @default(uuid())
  title         String        
  description   String
  frequenz      String

}

model UserTodo {
  id            String         @id @unique @default(uuid())
  userid        String
  todoid        String
}

model Wg {
  id            String         @id @unique @default(uuid())
  name          String
  description   String
  rules         String
}

model WgMember {
  id            String         @id @unique @default(uuid())
  wgid          String
  userid        String
  aktive        Boolean        @default(false)
  role          String
}